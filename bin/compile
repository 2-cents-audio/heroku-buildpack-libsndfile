#!/usr/bin/env bash
echo "-----&gt; Installing libsndfile 1.0.25"
# change to the the BUILD_DIR ($1)
cd $1
# download the binary (-O) silently (-s)
curl https://s3.amazonaws.com/libsndfile-binary/libsndfile.tar.gz -s -O
# make a directory to untar (like unzip) the binary
mkdir -p vendor/libsndfile
# untar the binary to the directory we want
tar -C vendor/libsndfile -xvf libsndfile.tar.gz
# make directories to copy lib files
#mkdir -p /usr/share/R/include
#mkdir -p /usr/share/R/lib
# copy files to R directory for gcc
#cp vendor/libsndfile/include/* /usr/share/R/include
#cp vendor/libsndfile/lib/* /usr/share/R/lib
# prepend path
#export PATH=/app/vendor/libsndfile/bin:/app/vendor/libsndfile/include:/app/vendor/libsndfile/lib:/app/vendor/libsndfile:$BUILD_DIR/.heroku/vendor/libsndfile:$BUILD_DIR/.heroku/vendor/libsndfile/include:$BUILD_DIR/.heroku/vendor/libsndfile/lib:$BUILD_DIR/.heroku/vendor/libsndfile/bin:$BUILD_DIR/.heroku/vendor/bin:$PATH
